<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.lanjian.farm.activity.MainActivity">
    <com.lanjian.farm.common.CustomTitleBar
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:leftImage1="@mipmap/ic_back"
        app:rightTitle2="设置"
        app:middleTitle="首页"
        app:middleTextColor="@color/white"
        app:rightTextColor2="@color/white">

    </com.lanjian.farm.common.CustomTitleBar>
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <Button
            android:id="@+id/connect_bluetooth_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="连接蓝牙"/>
        <Button
            android:id="@+id/connect_wifi_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="连接wifi"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <Button
            android:id="@+id/connect_probe_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="连接设备"/>
        <Button
            android:id="@+id/probe_setting_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="配置设备"/>
    </LinearLayout>
</LinearLayout>
